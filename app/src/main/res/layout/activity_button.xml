<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Button_Activity"
    tools:ignore="DuplicateIds">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"></LinearLayout>

    <Button
        android:id="@+id/returnbtn"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:text="close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toastbtn"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:text="toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/returnbtn" />

    <Button
        android:id="@+id/backgroundbtn"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:text="change background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toastbtn" />

    <Button
        android:id="@+id/colorbtn"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:text="Change color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundbtn" />

    <Button
        android:id="@+id/disappearbtn"
        android:layout_width="206dp"
        android:layout_height="88dp"
        android:layout_marginTop="50dp"
        android:text="disappear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>